<div class=" home-container">
  <div class="theme-search-section">
    <div class="theme-search-instructions">
      <p>Select themes you are interested in:</p>
    </div>
    <div class="theme-search-zone">
      <form action="/themes">
        <input id="search-bar"type="text" name="theme" placeholder="javascript, python, rails, ...">
        <%= hidden_field_tag 'latitude' %>
        <%= hidden_field_tag 'longitude' %>
        <div class="search-buttons">
          <input type="submit" name="search" value="Search articles">
          <input type="submit" name="search" value="Events near me">
          <input type="submit" name="search" value="Add to interests">
        </div>
      </form>
    </div>
    <div class="theme-search-items">
      <h4>Some of your current interests</h4>
      <div class="theme-card-container">
        <% @user_themes.each do |user_theme| %>
          <div class="user-theme-card">
            <span><%= user_theme.theme.name %></span>
            <%= link_to user_theme_path(user_theme), method: :delete do %>
              <i class="far fa-minus-square"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="main-content">
    <div class="content-articles">
      <h2>Article list</h2>
      <div class="content-container">
        <% if @articles %>
          <% @articles.each do |article| %>
            <%= render partial: "shared/article", locals: { article: article }  %>
          <% end %>
        <% else %>
          <div class="search-error">No articles found, try again!</div>
        <% end %>
      </div>
    </div>
    <div class="content-meetups">
      <h2>Meetup list</h2>
      <div class="content-container">
        <% if @meetups %>
          <% @meetups.each do |meetup| %>
            <%= render partial: "shared/meetup", locals: { meetup: meetup }  %>
          <% end %>
        <% else %>
          <div class="search-error">
            <p>Meetup feature not yet available ! ğŸ¤“</p>
            <p>Eventbrite API not available at the moment and Meetup API is ğŸ’¸</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


