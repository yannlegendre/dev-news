<div class="auth">
  <h2>Log in</h2>

  <%- if devise_mapping.omniauthable? %>
  <%= link_to image_tag("btn_google.png").html_safe, omniauth_authorize_path(@user, :google_oauth2), class: "google-auth" %>
  <%= link_to image_tag("btn_facebook.png").html_safe, omniauth_authorize_path(@user, :facebook), class: "facebook-auth" %>
<% end %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>
